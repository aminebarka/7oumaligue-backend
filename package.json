{
  "name": "7oumaligue-backend",
  "version": "1.0.0",
  "description": "Backend API for 7ouma Ligue mini-football management system",
  "main": "dist/src/server.js",
  "scripts": {
    "postinstall": "node check-dependencies.js",
    "dev": "kill-port 5000 && nodemon --exec ts-node --files src/server.ts",
    "dev:simple": "node start-dev-robust.js",
    "build": "node ./node_modules/typescript/bin/tsc",
    "build:azure": "node ./node_modules/typescript/bin/tsc && echo 'âœ… Build completed for Azure deployment'",
    "start": "node start-prod.js",
    "azure:start": "node start-prod.js",
    "azure:predeploy": "npm install --production=false && npm run build && npx prisma generate",
    "install:full": "npm install --production=false && npm run postinstall",
    "check-build": "node check-build.js",
    "verify-deployment": "node verify-deployment.js",
    "pre-deploy-test": "bash pre-deploy-test.sh",
    "diagnose": "node diagnose-azure.js",
    "predeploy": "node pre-deploy.js",
    "azure:deploy": "npm run predeploy && npm run build && node start-server.js",
    "test-azure": "bash test-azure-local.sh",
    "check-azure": "node check-azure-config.js",
    "test-docker": "bash test-docker-azure.sh",
    "analyze-logs": "node analyze-azure-logs.js",
    "test-deps": "node test-dependencies.js",
    "check-startup": "node check-startup-command.js",
    "deploy-fix": "bash deploy-fix.sh",
    "configure-azure": "node configure-azure.js",
    "test-paths": "node test-explicit-paths.js",
    "docker-build": "docker build -t 7oumaligue-backend .",
    "docker-run": "docker run -it --rm -p 3000:8080 7oumaligue-backend",
    "docker-test": "bash test-docker-local.sh",
    "docker-test:clean": "bash test-docker-local.sh --clean",
    "docker-compose:up": "docker-compose up -d",
    "docker-compose:down": "docker-compose down",
    "docker-compose:logs": "docker-compose logs -f backend",
    "docker-test:win": "powershell -ExecutionPolicy Bypass -File test-docker-local.ps1",
    "docker-test:win:clean": "powershell -ExecutionPolicy Bypass -File test-docker-local.ps1 --clean",
    "cleanup-workflows": "bash cleanup-workflows.sh",
    "test-no-docker": "node test-without-docker.js",
    "start:azure": "node ./node_modules/typescript/bin/tsc && node dist/src/server.js",
    "start:prod": "node dist/src/server.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop 7oumaligue-backend",
    "pm2:restart": "pm2 restart 7oumaligue-backend",
    "pm2:delete": "pm2 delete 7oumaligue-backend",
    "pm2:logs": "pm2 logs 7oumaligue-backend",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "start:auto": "bash scripts/start.sh",
    "start:auto:win": "scripts\\monitor.bat",
    "monitor": "node scripts/monitor.js",
    "migrate": "prisma migrate dev",
    "generate": "prisma generate",
    "seed": "ts-node prisma/seed.ts",
    "studio": "prisma studio",
    "test:db": "node test-db.js",
    "setup:env": "node setup-env.js",
    "diagnose": "node diagnose.js",
    "start:server": "node start-server.js",
    "clean:start": "node clean-start.js",
    "test:teams": "node test-team-creation.js",
    "test:cors": "node test-cors.js",
    "reset:rate-limit": "node reset-rate-limit.js",
    "test:team-deletion": "node test-team-deletion.js",
    "check:team": "node check-team-exists.js",
    "check:auth": "node check-user-auth.js",
    "test:force-delete": "node test-force-delete.js",
    "test:tournament": "node test-tournament-creation.js",
    "test:draw": "node test-draw-system.js",
    "check:draw": "node check-draw-issues.js",
    "test:draw:real": "node test-draw-real.js",
    "test:deployment": "node test-deployment-fix.js",
    "test:startup": "node test-startup.js",
    "deploy:check": "node deploy-to-azure.js",
    "diagnose:deps": "node diagnose-dependencies.js",
    "check-deps": "node check-dependencies.js",
    "fix-deps": "node fix-dependencies.js",
    "test:azure-solution": "node test-azure-solution.js",
    "verify:solution": "node verify-solution.js",
    "cleanup:old": "node cleanup-old-scripts.js"
  },
  "keywords": [
    "football",
    "tournament",
    "management",
    "api"
  ],
  "author": "7ouma Ligue Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "@types/nodemailer": "^6.4.17",
    "@types/sharp": "^0.31.1",
    "@types/stripe": "^8.0.416",
    "bcryptjs": "^2.4.3",
    "canvas": "^3.1.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "framer-motion": "^12.23.12",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "kill-port": "^2.0.1",
    "nodemailer": "^7.0.5",
    "sharp": "^0.34.3",
    "stripe": "^18.4.0",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.9",
    "nodemon": "^3.0.2",
    "pm2": "^6.0.8",
    "prisma": "^6.12.0"
  }
}
