{
  "name": "7oumaligue-backend",
  "version": "1.0.0",
  "description": "Backend API for 7ouma Ligue mini-football management system",
  "main": "dist/src/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node --files src/server.ts",
    "build": "tsc",
    "start": "node dist/src/server.js",
    "azure:predeploy": "npm install --production=false && npm run build && npx prisma generate && npx prisma migrate deploy",
    "migrate": "prisma migrate dev",
    "generate": "prisma generate",
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [
    "football",
    "tournament",
    "management",
    "api"
  ],
  "author": "7ouma Ligue Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "bcryptjs": "^2.4.3",
    "canvas": "^2.11.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.5",
    "sharp": "^0.34.3",
    "stripe": "^18.4.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.2",
    "@types/express-validator": "^3.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.9",
    "nodemon": "^3.0.2",
    "pm2": "^6.0.8",
    "prisma": "^6.12.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
